{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "client/build",
  "installCommand": "npm install --no-fund --no-audit",
  "framework": null,
  "ignoreCommand": "exit 0",

  "functions": {
    "api/og.js":   { "runtime": "edge" },
    "api/meta.js": { "runtime": "edge" }
  },

  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],

  "redirects": [],
  "trailingSlash": false,
  "cleanUrls": true,

  "rewrites": [
    { "source": "/api/og",   "destination": "/api/og" },
    { "source": "/api/meta", "destination": "/api/meta" },

    { "source": "/api/(.*)", "destination": "https://fixloapp.onrender.com/api/$1" },

    { "source": "/(.*)", "destination": "/" }
  ]
}