{
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "installCommand": "npm install --no-fund --no-audit",
  "framework": null,
  "functions": {
    "api/og.js": {
      "runtime": "edge"
    },
    "api/meta.js": {
      "runtime": "edge"
    },
    "api/pro-signup.js": {
      "runtime": "nodejs18.x"
    },
    "api/homeowner-lead.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_VERSION": "20.x",
    "NPM_FLAGS": "--no-fund --no-audit",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/services/:service", "destination": "/" },
    { "source": "/services/:service/:city", "destination": "/" },
    { "source": "/(.*)", "destination": "/" }
  ]
}