{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install --no-fund --no-audit",
  "framework": null,
  "ignoreCommand": "exit 0",
  "functions": {
    "api/og.js": { "runtime": "edge" },
    "api/meta.js": { "runtime": "edge" },
    "api/pro-signup.js": { "runtime": "nodejs20.x" },
    "api/homeowner-lead.js": { "runtime": "nodejs20.x" }
  },
  "env": {
    "NODE_VERSION": "20.x",
    "NPM_FLAGS": "--no-fund --no-audit",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ],
  "redirects": [],
  "trailingSlash": false,
  "cleanUrls": true,
  "rewrites": [
    { "source": "/api/og", "destination": "/api/og" },
    { "source": "/api/meta", "destination": "/api/meta" },
    { "source": "/api/(.*)", "destination": "https://fixloapp.onrender.com/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
