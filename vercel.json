{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd client && npm ci --no-fund --no-audit && npm run build",
  "outputDirectory": "client/build",
  "installCommand": "npm install --no-fund --no-audit",
  "framework": null,
  "ignoreCommand": "exit 0",
  "cleanUrls": true,
  "trailingSlash": false,

  "env": {
    "NODE_VERSION": "20.x",
    "NPM_FLAGS": "--no-fund --no-audit",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/og", "destination": "/api/og" },
    { "source": "/api/meta", "destination": "/api/meta" },
    { "source": "/api/(.*)", "destination": "https://fixloapp.onrender.com/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
