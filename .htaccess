# SEO and Security .htaccess Configuration for Fixlo

# Enable rewrite engine
RewriteEngine On

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect non-www to www (standardize on www.fixloapp.com)
RewriteCond %{HTTP_HOST} ^fixloapp\.com$ [NC]
RewriteRule ^(.*)$ https://www.fixloapp.com/$1 [R=301,L]

# Redirect old domain to new domain
RewriteCond %{HTTP_HOST} ^(www\.)?fixlo\.com$ [NC]
RewriteRule ^(.*)$ https://www.fixloapp.com/$1 [R=301,L]

# Handle trailing slash redirects for consistency
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)/$ /$1 [R=301,L]

# Redirect duplicate content directories to canonical versions
RewriteRule ^build/(.*)$ /$1 [R=301,L]
RewriteRule ^public/(.*)$ /$1 [R=301,L]
RewriteRule ^client/public/(.*)$ /$1 [R=301,L]
RewriteRule ^website/(.*)$ /$1 [R=301,L]

# Redirect .html extensions to clean URLs for SEO
RewriteRule ^contact\.html$ /contact [R=301,L]
RewriteRule ^privacy\.html$ /privacy [R=301,L] 
RewriteRule ^terms\.html$ /terms [R=301,L]
RewriteRule ^support\.html$ /support [R=301,L]
RewriteRule ^signup\.html$ /signup [R=301,L]
RewriteRule ^pro-signup\.html$ /pro-signup [R=301,L]
RewriteRule ^how-it-works\.html$ /how-it-works [R=301,L]
RewriteRule ^sms-compliance\.html$ /sms-compliance [R=301,L]
RewriteRule ^contact-support\.html$ /contact-support [R=301,L]
RewriteRule ^admin\.html$ /admin [R=301,L]

# Redirect contact subdirectory to clean contact URL
RewriteRule ^contact/$ /contact [R=301,L]
RewriteRule ^contact/index\.html$ /contact [R=301,L]

# Redirect signup subdirectory to clean signup URL  
RewriteRule ^signup/$ /signup [R=301,L]
RewriteRule ^signup/index\.html$ /signup [R=301,L]

# Redirect sms-optin subdirectory to clean sms-compliance URL
RewriteRule ^sms-optin/$ /sms-compliance [R=301,L]
RewriteRule ^sms-optin/index\.html$ /sms-compliance [R=301,L]

# Redirect services subdirectory to maintain clean URLs
RewriteRule ^services/index\.html$ /services/ [R=301,L]

# Internal rewrites: serve pre-rendered SPA routes and .html files for clean URLs (no redirect)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# Pre-rendered SPA routes - serve from generated directories
RewriteRule ^signup/?$ /signup/index.html [L]
RewriteRule ^how-it-works/?$ /how-it-works/index.html [L]
RewriteRule ^contact/?$ /contact/index.html [L]
RewriteRule ^services/?$ /services/index.html [L]
RewriteRule ^services/([^/]+)/?$ /services/$1/index.html [L]
RewriteRule ^pro/signup/?$ /pro/signup/index.html [L]
# Static HTML files
RewriteRule ^privacy$ /privacy.html [L]
RewriteRule ^terms$ /terms.html [L] 
RewriteRule ^support$ /support.html [L]
RewriteRule ^pro-signup$ /pro-signup.html [L]
RewriteRule ^sms-compliance$ /sms-compliance.html [L]
RewriteRule ^contact-support$ /contact-support.html [L]
RewriteRule ^admin$ /admin.html [L]
RewriteRule ^login$ /login.html [L]
RewriteRule ^dashboard$ /dashboard.html [L]
# Fallback: serve main SPA for any other routes
RewriteRule ^.*$ /index.html [L]

# Prevent access to sensitive files
<FilesMatch "\.(env|log|sql|sqlite|bak|backup|old)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to admin areas from search engines
<Location "/admin">
    Header set X-Robots-Tag "noindex, nofollow"
</Location>

<Location "/api">
    Header set X-Robots-Tag "noindex, nofollow"
</Location>

# Add noindex to test files and directories
<FilesMatch "^(test|admin).*\.html$">
    Header set X-Robots-Tag "noindex, nofollow"
</FilesMatch>

# Set proper MIME types
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
    AddType image/svg+xml .svg
    AddType image/webp .webp
</IfModule>

# Enable compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Cache static resources
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Custom error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Prevent image hotlinking
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?fixloapp\.com [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp|svg)$ - [F,L]

# Cache busting for static resources
<IfModule mod_headers.c>
    # Cache hashed JS files for 1 year (safe due to content-based naming)
    <FilesMatch "main\.[a-f0-9]{8}\.js$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # Short cache for other JS files to prevent stale references
    <FilesMatch "\.js$">
        Header set Cache-Control "max-age=300, public"
    </FilesMatch>
    
    # Cache static assets longer
    <FilesMatch "\.(css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
</IfModule>