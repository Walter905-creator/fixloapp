# SEO and Security .htaccess Configuration for Fixlo

# Enable rewrite engine
RewriteEngine On

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect non-www to www (standardize on www.fixloapp.com)
RewriteCond %{HTTP_HOST} ^fixloapp\.com$ [NC]
RewriteRule ^(.*)$ https://www.fixloapp.com/$1 [R=301,L]

# Redirect old domain to new domain
RewriteCond %{HTTP_HOST} ^(www\.)?fixlo\.com$ [NC]
RewriteRule ^(.*)$ https://www.fixloapp.com/$1 [R=301,L]

# Handle trailing slash redirects for consistency
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)/$ /$1 [R=301,L]

# Redirect duplicate content directories to canonical versions
RewriteRule ^build/(.*)$ /$1 [R=301,L]
RewriteRule ^public/(.*)$ /$1 [R=301,L]
RewriteRule ^client/public/(.*)$ /$1 [R=301,L]
RewriteRule ^website/(.*)$ /$1 [R=301,L]

# Redirect contact subdirectory to main contact page
RewriteRule ^contact/$ /contact.html [R=301,L]
RewriteRule ^contact/index\.html$ /contact.html [R=301,L]

# Redirect signup subdirectory to main signup page
RewriteRule ^signup/$ /signup.html [R=301,L]
RewriteRule ^signup/index\.html$ /signup.html [R=301,L]

# Redirect sms-optin subdirectory to main sms-compliance page
RewriteRule ^sms-optin/$ /sms-compliance.html [R=301,L]
RewriteRule ^sms-optin/index\.html$ /sms-compliance.html [R=301,L]

# Redirect services subdirectory to maintain clean URLs
RewriteRule ^services/index\.html$ /services/ [R=301,L]

# Prevent access to sensitive files
<FilesMatch "\.(env|log|sql|sqlite|bak|backup|old)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to admin areas from search engines
<Location "/admin">
    Header set X-Robots-Tag "noindex, nofollow"
</Location>

<Location "/api">
    Header set X-Robots-Tag "noindex, nofollow"
</Location>

# Add noindex to test files and directories
<FilesMatch "^(test|admin).*\.html$">
    Header set X-Robots-Tag "noindex, nofollow"
</FilesMatch>

# Set proper MIME types
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
    AddType image/svg+xml .svg
    AddType image/webp .webp
</IfModule>

# Enable compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Cache static resources
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Custom error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Prevent image hotlinking
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?fixloapp\.com [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp|svg)$ - [F,L]