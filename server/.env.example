# MongoDB Connection
MONGODB_URI=mongodb+srv://your-connection-string

# Stripe Configuration (LIVE MODE FOR PRODUCTION)
# Production: Use sk_live_ and pk_live_ keys ONLY
# Development: Use sk_test_ and pk_test_ keys ONLY
STRIPE_SECRET_KEY=sk_live_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_MONTHLY_PRICE_ID=price_your_monthly_price_id_here
# STRIPE_PRICE_ID=prod_SaAyX0rd1VWGE0  # Use your actual Stripe price/product ID for 30-day trial
# Fixlo Pro Product ID - Used for restricting referral coupons to Pro membership only
FIXLO_PRO_PRODUCT_ID=prod_SaAyX0rd1VWGE0  # Your actual Stripe product ID

# Twilio Configuration (SMS and WhatsApp notifications)
# SMS for USA, WhatsApp for international (requires opt-in)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
# IMPORTANT: Use TWILIO_PHONE_NUMBER (preferred) or TWILIO_PHONE (legacy support)
TWILIO_PHONE_NUMBER=+12564881814
# WhatsApp sender (E.164 format, without whatsapp: prefix)
TWILIO_WHATSAPP_NUMBER=+14155238886

# Background Checks (Checkr)
CHECKR_API_KEY=your_checkr_api_key_here
CHECKR_WEBHOOK_SECRET=your_checkr_webhook_secret_here
CHECKR_WEBHOOK_URL=https://fixloapp.onrender.com/api/checkr/webhook

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Frontend URL
CLIENT_URL=https://www.fixloapp.com
YOUR_DOMAIN=https://www.fixloapp.com  # Domain for Stripe checkout redirects

# Server Configuration
PORT=10000
NODE_ENV=production

# Profile Sharing & Boost Settings
BOOST_DAYS=7
BOOST_WEIGHT=10
RATING_WEIGHT=1.5
RECENCY_WEIGHT=0.1
REV_AUTOPUBLISH=true

# Background Checks Feature Flag
ENABLE_BG_CHECKS=false

# ==================== Social Media Manager ====================
# Automated social media posting with OAuth-only authentication
# Generate encryption key: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"

# REQUIRED: AES-256 encryption key for OAuth tokens (32 bytes, base64 encoded)
SOCIAL_ENCRYPTION_KEY=your_base64_encryption_key_here

# Meta (Instagram + Facebook Pages)
# Setup: https://developers.facebook.com/
SOCIAL_META_CLIENT_ID=your_meta_app_id_here
SOCIAL_META_CLIENT_SECRET=your_meta_app_secret_here
SOCIAL_META_REDIRECT_URI=https://fixloapp.com/api/social/oauth/meta/callback

# TikTok Business
# Setup: https://developers.tiktok.com/
SOCIAL_TIKTOK_CLIENT_ID=your_tiktok_client_key_here
SOCIAL_TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here
SOCIAL_TIKTOK_REDIRECT_URI=https://fixloapp.com/api/social/oauth/tiktok/callback

# X (Twitter) - Requires paid tier
# Setup: https://developer.twitter.com/
SOCIAL_X_CLIENT_ID=your_x_client_id_here
SOCIAL_X_CLIENT_SECRET=your_x_client_secret_here
SOCIAL_X_REDIRECT_URI=https://fixloapp.com/api/social/oauth/x/callback

# LinkedIn Company Pages
# Setup: https://www.linkedin.com/developers/apps
SOCIAL_LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
SOCIAL_LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
SOCIAL_LINKEDIN_REDIRECT_URI=https://fixloapp.com/api/social/oauth/linkedin/callback

# AI Content Generation (uses existing OPENAI_API_KEY above)
# Optional: Override AI model for social content
# SOCIAL_AI_MODEL=gpt-4

# Automated Posting Control (SAFETY: OFF by default)
# Set to 'true' to enable automated posting at runtime
# When 'false', scheduler can only be started via manual API calls
# IMPORTANT: This is a safety feature - never auto-enable in production
SOCIAL_AUTOMATION_ENABLED=false

# ==================== Commission Referral System ====================
# Public commission-based referral program
# Anyone can earn 15-20% commission by referring new Pros
# CRITICAL: Set to 'true' to enable, 'false' to disable completely
REFERRALS_ENABLED=false

# Stripe Connect Processing Fees (for commission payouts)
# These values should be reviewed periodically as Stripe fees may change
STRIPE_PERCENTAGE_FEE=0.029  # 2.9%
STRIPE_FIXED_FEE_CENTS=30    # $0.30 in cents

