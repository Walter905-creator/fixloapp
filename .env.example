# Rate Limits (Publishing Velocity Control)
DISTRIBUTION_MAX_PAGES_PER_DAY=50
DISTRIBUTION_MAX_PAGES_PER_HOUR=5
DISTRIBUTION_MAX_PAGES_PER_ROUTE=10
DISTRIBUTION_MIN_INTERVAL_MINUTES=15
DISTRIBUTION_COOLDOWN_HOURS=24

# Content Quality Requirements
DISTRIBUTION_MIN_WORD_COUNT=300
DISTRIBUTION_MAX_WORD_COUNT=1500
DISTRIBUTION_MIN_HEADINGS=3
DISTRIBUTION_MAX_HEADINGS=8
DISTRIBUTION_MIN_PARAGRAPHS=5
DISTRIBUTION_REQUIRE_FAQ=true
DISTRIBUTION_MIN_FAQ_ITEMS=3

# Sitemap Configuration
DISTRIBUTION_MAX_URLS_PER_SITEMAP=5000
DISTRIBUTION_SITEMAP_UPDATE_FREQ=daily
DISTRIBUTION_SITEMAP_PRIORITY=0.7
DISTRIBUTION_AUTO_SUBMIT_SITEMAP=true

# Monitoring & Self-Healing
DISTRIBUTION_MAX_CRAWL_ERROR_RATE=0.1
DISTRIBUTION_MIN_INDEX_RATE=0.5
DISTRIBUTION_INDEX_CHECK_DELAY_DAYS=7
DISTRIBUTION_AUTO_SLOWDOWN=true
DISTRIBUTION_AUTO_PAUSE=true

# Owned Authority Network (Config-Ready, Manual Only)
DISTRIBUTION_OWNED_NETWORK_ENABLED=false
DISTRIBUTION_OWNED_DOMAINS=
DISTRIBUTION_OUTPUT_DIR=./distribution-output

# Social Echo (Preparation Only, No Auto-Posting)
DISTRIBUTION_SOCIAL_ECHO_ENABLED=false
DISTRIBUTION_SOCIAL_OUTPUT_DIR=./social-output

# Internal Linking
DISTRIBUTION_INTERNAL_LINKING=true
DISTRIBUTION_MAX_LINKS_PER_PAGE=5
DISTRIBUTION_LINK_DENSITY_MAX=0.02

# Logging
DISTRIBUTION_LOG_LEVEL=info
DISTRIBUTION_LOG_DIR=./logs/distribution

# Commission Referral System (Frontend Feature Flag)
# Set to 'true' to enable public commission referral UI, 'false' to disable
VITE_REFERRALS_ENABLED=false
