{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install --no-fund --no-audit",
  "framework": null,
  "cleanUrls": true,
  "trailingSlash": false,

  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],

  "rewrites": [
    { "source": "/api/og",   "destination": "/api/og" },
    { "source": "/api/meta", "destination": "/api/meta" },
    { "source": "/api/(.*)", "destination": "https://fixloapp.onrender.com/api/$1" },
    { "source": "/sms-optin", "destination": "/sms-optin/index.html" },
    { "source": "/(.*)",     "destination": "/" }
  ]
}