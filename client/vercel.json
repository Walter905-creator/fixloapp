{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install --no-fund --no-audit",
  "framework": null,
  "ignoreCommand": "exit 0",
  "functions": {
    "api/cloudinary/sign.js": { "runtime": "nodejs20.x" }
  },
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true,
  "rewrites": [
    { "source": "/api/cloudinary/sign", "destination": "/api/cloudinary/sign" },
    { "source": "/api/(.*)", "destination": "https://fixloapp.onrender.com/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}